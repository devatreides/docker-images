#!/usr/bin/env bash

USERID=${USER_ID:-1001}
export USERNAME=${USER_NAME:-ubuntu}

useradd -m -u $USERID $USERNAME
usermod -a -G root,www-data $USERNAME

mkdir -p /home/$USERNAME/.composer && \
chown -R $USERNAME:$USERNAME /home/$USERNAME

if [ ! -z "$XDEBUG_IDE_KEY" ]; then
  echo "xdebug.idekey=$XDEBUG_IDE_KEY" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini
fi

if [ ! -z "$XDEBUG_CLIENT_HOST" ]; then
  echo "xdebug.client_host=$XDEBUG_CLIENT_HOST" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini
else
  echo "xdebug.client_host=host.docker.internal" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini
fi

if [ ! -z "$XDEBUG_MODE" ]; then
    echo "xdebug.mode=$XDEBUG_MODE" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini
else
    echo "xdebug.mode=off" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini
fi

if [ ! -z "$SUPERVISOR_SERVICES" ]; then
    cat /tmp/supervisor/laravel /tmp/supervisor/$(echo "${SUPERVISOR_SERVICES//,/ /tmp/supervisor/}") >> /etc/supervisor/conf.d/supervisord.conf
else
    cat laravel >> /etc/supervisor/conf.d/supervisord.conf
fi


if [ $# -gt 0 ];then
    exec gosu $USERID "$@"
else
    /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf
fi